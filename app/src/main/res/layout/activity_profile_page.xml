<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ProfilePageTitleLayout"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/profilePageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Page"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/profilePageFieldsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ProfilePageTitleLayout">

        <!--
        <TextView
            android:id="@+id/profilePageUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Username" />
            -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:text="My Username"
           />

        <TextView
            android:id="@+id/profilePageHighScore"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="High Score: 1" />

        <TextView
            android:id="@+id/profilePageGamesPlayedCount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Total Games Played: 23" />

        <TextView
            android:id="@+id/profilePageFavAsm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="You used XOR 52 times!" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profilePageRunHistoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePageFieldsLayout">

        <TextView
            android:id="@+id/profilePageRunHistoryItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run History List" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>