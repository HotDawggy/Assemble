<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ProfilePageTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/profilePageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Page" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/profilePageFieldsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <EditText
            android:id="@+id/profilePageUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/profilePageHighScore"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="High Score: 1" />

        <TextView
            android:id="@+id/profilePageGamesPlayedCount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Total Games Played: 23" />

        <TextView
            android:id="@+id/profilePageFavAsm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="You used XOR 52 times!" />

    </LinearLayout>

</LinearLayout>